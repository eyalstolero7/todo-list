<%- include("header") -%>

<div class="box" id="heading">
    <h1> <%= upperFirstOnlyEjs(listTitle) %> </h1>
</div>
<div class="box">
    <% itemsArr.forEach((item) =>{ %>
    <form method="POST" action="/delete/<%= kebabCaseEjs(listTitle)%>">
        <div class="item">
            <input type="checkbox" name="checkbox" value= <%=item._id%> onChange="this.form.submit()">
            <p><%= item.name %></p>
        </div>
    </form>
    <% }); %>

    <form class="item" method="POST" action="/<%= kebabCaseEjs(listTitle)%>">
        <input type="text" name="newItem" placeholder="New Item" required autocomplete="off">

        <button type="submit" name="list">+</button>
    </form>
</div>

<%- include("footer") -%>